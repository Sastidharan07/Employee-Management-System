<% const title = 'Manage Employees' %>
<%- include('../layout', { title, user, body: `
<div class="employees-page">
    <div class="page-header">
        <h1>Manage Employees</h1>
        <div class="header-actions">
            <a href="/admin/add-employee" class="btn btn-primary">Add New Employee</a>
            <a href="/admin/bulk-operations" class="btn btn-secondary">Bulk Operations</a>
        </div>
    </div>
    
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Profile</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                ${employees.map(emp => `
                    <tr class="employee-row ${emp.employee_status || 'available'}">
                        <td class="profile-cell">
                            ${emp.profile_image ? `
                                <img src="/uploads/profiles/${emp.profile_image}" alt="${emp.name}" class="employee-avatar">
                            ` : `
                                <div class="employee-avatar-placeholder">
                                    ${emp.name.charAt(0).toUpperCase()}
                                </div>
                            `}
                        </td>
                        <td><strong>${emp.name}</strong></td>
                        <td>${emp.username}</td>
                        <td>${emp.email || 'N/A'}</td>
                        <td>${emp.department || 'N/A'}</td>
                        <td>
                            <span class="status status-${emp.employee_status || 'available'}">
                                ${emp.employee_status === 'on-leave' ? 'üèñÔ∏è On Leave' : '‚úÖ Available'}
                            </span>
                            ${emp.leave_end_date ? `
                                <br><small>Until ${new Date(emp.leave_end_date).toLocaleDateString()}</small>
                            ` : ''}
                        </td>
                        <td>${new Date(emp.created_at).toLocaleDateString()}</td>
                        <td class="actions-cell">
                            <a href="/admin/view-employee/${emp.id}" class="btn btn-sm btn-info">View</a>
                            <a href="/admin/edit-employee/${emp.id}" class="btn btn-sm btn-primary">Edit</a>
                            <form method="POST" action="/admin/delete-employee/${emp.id}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this employee? This action cannot be undone.')">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                `).join('')}
            </tbody>
        </table>
        
        ${employees.length === 0 ? '<p class="no-data">No employees found. <a href="/admin/add-employee">Add the first employee</a>.</p>' : ''}
    </div>

    ${employees.length > 0 ? `
        <div class="employee-stats">
            <div class="stat-card">
                <h3>Total Employees</h3>
                <div class="stat-number">${employees.length}</div>
            </div>
            <div class="stat-card">
                <h3>Currently On Leave</h3>
                <div class="stat-number">${employees.filter(emp => emp.employee_status === 'on-leave').length}</div>
            </div>
            <div class="stat-card">
                <h3>Available</h3>
                <div class="stat-number">${employees.filter(emp => emp.employee_status !== 'on-leave').length}</div>
            </div>
        </div>
    ` : ''}
</div>

<style>
.employee-row.on-leave {
    background-color: #fff3cd;
}

.employee-row.available {
    background-color: #d4edda;
}

.status-available {
    background: #28a745;
    color: white;
}

.status-on-leave {
    background: #ffc107;
    color: #212529;
}

.employee-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
}

.stat-card {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #dee2e6;
    text-align: center;
}

.stat-number {
    font-size: 2rem;
    font-weight: bold;
    color: #007bff;
}
</style>
` }) %>
